@PostMapping("/addlogin")
public String addCredential(@RequestBody User rb) {
	String id=rb.getUserid();
	String pass=rb.getPassword();
	int i=rserv.addCredential(id,pass);
	if(i==1)
	{
		return "Login Successfull";
	}
	else{
		System.out.println("User Not Found");
		return "redirect:/addRegister";
	}	
}
}
